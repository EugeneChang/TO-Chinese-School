<% @title = 'Sign In' %>

<div class="admin-form">
  <% form_tag do %>
    <fieldset>
      <legend>Please Sign In</legend>
      <div>
        <label for="username">Username:</label>
        <%= text_field_tag :username, params[:username] %>
      </div>
      <div>
        <label for="password">Password:</label>
        <%= password_field_tag :password, params[:password] %>
      </div>
      <div>
        <%= submit_tag "Sign In" %>
      </div>
    </fieldset>
  <% end %>
</div>
