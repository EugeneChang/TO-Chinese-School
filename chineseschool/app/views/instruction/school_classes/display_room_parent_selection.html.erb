<%=h @school_class.current_room_parent_name %>&nbsp;
<%= collection_select :school_class, :current_room_parent_name, @school_class.find_room_parent_candidates, :id, :name, {:include_blank => false, :selected => @school_class.current_room_parent_assignment.try(:instructor).try(:id)} %>&nbsp;
<% save_room_parent_selection_handler = "saveRoomParentSelection(this, '#{url_for :controller => "/instruction/school_classes", :action => :save_room_parent_selection, :id => @school_class}')"  %>
<% cancel_room_parent_selection_handler = "displayRoomParentSelection(this, '#{url_for :controller => "/instruction/school_classes", :action => :cancel_room_parent_selection, :id => @school_class}')"  %>
<input type="button" value="Save" onclick="<%= save_room_parent_selection_handler %>" class="button ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" role="button"/>&nbsp;
<input type="button" value="Cancel" onclick="<%= cancel_room_parent_selection_handler %>" class="button ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" role="button"/>
