<% @title = 'Lane Assignments' %>

<%= link_to 'Back to Manage Track Events', {controller: '/activity/track_events', action: 'index'}, {class: 'button'} %>
<br/><br/>

<% @track_event_programs.each do |program| %>
    <h3><%=h program.name %></h3>
    <% program.sorted_heats.each do |heat| %>
        <%= link_to "Heat #{heat.run_order}", {controller: '/activity/track_events', action: 'heat_view', id: heat }, {class: 'button'} %>
    <% end %>
    <br/><br/>
    <% unless program.group_program? %>
        <%= link_to "View Scores for #{program.name}", {controller: '/activity/track_events', action: 'view_scores', id: program }, {class: 'button'} %>
        <br/><br/>
    <% end %>
<% end %>
