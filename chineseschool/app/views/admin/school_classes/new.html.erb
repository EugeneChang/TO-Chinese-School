<% @title = 'Create New School Class' %>

<div class="account-form">
  <% if @school_class.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@school_class.errors.count, 'error') %> prohibited creating this new school class:</h2>
        <ul>
          <% @school_class.errors.full_messages.each do |msg| %>
              <li><%= msg %></li> <% end %>
        </ul>
      </div>
  <% end %>

  <%= form_for @school_class, url: { action: :new } do |form| %>
    <fieldset>
      <legend>Create New School Class</legend>
      <span class="school-class-edit">
        <%= render partial: 'school_class_form', object: form, locals: {current_grade_id: @school_class.grade_id} %>
        <span style="color:red">*&nbsp;</span>Required Field
        <div>
          <%= submit_tag 'Create', class: 'submit' %>
        </div>
      </span>
    </fieldset>
  <% end %>
</div>
