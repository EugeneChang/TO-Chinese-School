<% @title = 'Roles' %>

<table border="1px">
  <thead>
    <tr>
      <th>Role Name</th>
    </tr>
  </thead>
  <tbody>
    <% @roles.each do |role| -%>
    <tr>
      <td><%=h role.name %></td>
      <td><%= link_to 'Show Details', {action: 'show', id: role}, {class: 'button'} %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br/>
