<% @title = 'Roles' %>

<h1><%= @title %></h1>

<table border="1px">
  <thead>
    <tr>
      <th>Role Name</th>
    </tr>
  </thead>
  <tbody>
    <% @roles.each do |role| -%>
    <tr>
      <td><%=h role.name %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br/>

<div>
  <%= link_to 'Create Role', :action => 'new' %>
</div>