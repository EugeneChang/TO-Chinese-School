<% @title = 'School Years' %>

<table border="1px">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th></th>
      <th style="width: 10em">Assign Class Upon Registration</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @school_years.each do |school_year| -%>
    <tr>
      <td><%=h school_year.name %></td>
      <td><%=h school_year.description %></td>
      <td><%=h school_year.start_date %></td>
      <td><%=h school_year.end_date %></td>
      <td>
        <%= link_to 'Details', {action: 'show', id: school_year}, {class: 'button'} %>
      </td>
      <td style="text-align: center"><%= convert_to_yes_no(school_year.auto_class_assignment) %></td>
      <td>
        <%= link_to 'Change', {action: 'toggle_auto_class_assignment', id: school_year}, {class: 'button'} %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br/>
<%= link_to 'Create New School Year', {action: 'new'}, {class: 'button'} %>
<br/>
