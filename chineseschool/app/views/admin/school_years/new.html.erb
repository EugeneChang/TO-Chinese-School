<% @title = 'New School Year' %>

<div class="account-form">
  <% if @school_year.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@school_year.errors.count, 'error') %> prohibited creating this new school year:</h2>
        <ul>
          <% @school_year.errors.full_messages.each do |msg| %>
              <li><%= msg %></li> <% end %>
        </ul>
      </div>
  <% end %>

  <%= form_for :school_year do |form| %>
    <fieldset>
        <legend>New School Year</legend>
        <span class="school-year-edit">
          <%= render partial: 'school_year_form', object: form %>
          <span style="color:red">*&nbsp;</span>Required Field
          <div>
            <%= submit_tag 'Create', class: 'submit' %>
          </div>
        </span>
    </fieldset>
  <% end %>
</div>
