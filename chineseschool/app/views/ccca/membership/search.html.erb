<% @title = 'Search for CCCA Membership' %>

<h3>Search By Family Phone Number</h3>
<% form_tag({ :action => 'search_by_family_phone' })do %>
    <%= text_field_tag :phone_number, params[:phone_number], :size => 20 %>
    <%= submit_tag 'Search', :class => 'submit' %>
<% end %>
<br/>

<h3>Search By Family Street</h3>
<% form_tag({ :action => 'search_by_family_street' })do %>
    <%= text_field_tag :street, params[:street], :size => 40 %>
    <%= submit_tag 'Search', :class => 'submit' %>
<% end %>
<br/>
