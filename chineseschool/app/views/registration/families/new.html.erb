<% @title = 'Create Family' %>

<div class="account-form">
  <% if @address.errors.any? || @parent_one.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@address.errors.count + @parent_one.errors.count, 'error') %> prohibited creating this new family:</h2>
        <ul>
          <% @address.errors.full_messages.each do |msg| %>
              <li><%= msg %></li> <% end %>
          <% @parent_one.errors.full_messages.each do |msg| %>
              <li><%= msg %></li> <% end %>
        </ul>
      </div>
  <% end %>

  <%= form_for :address do |form| %>
    <fieldset>
      <legend>New Family</legend>
      <span class="person-edit">
        <div>
          Family Address:
        </div>
        <%= render partial: 'registration/addresses/address_form', object: form %>
        <br/>
        <div>
          Parent One of the family:
        </div>
        <%= fields_for :parent_one do |parent_one| %>
        <%= render partial: 'registration/people/person_form', object: parent_one %>
        <% end %>
        <span style="color:red">*&nbsp;</span>Required Field
        <div>
          <%= submit_tag 'Create', class: 'submit' %>
        </div>
      </span>
    </fieldset>
  <% end %>
</div>
