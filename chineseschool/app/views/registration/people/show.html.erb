<% @title = 'Person Details' %>

<table class="details-table" border="1px">
  <thead>
    <tr>
      <th>Name</th>
      <th>Gender</th>
      <th>Birth</th>
      <th>Native Language</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%=h @person.name %></td>
      <td><%=h @person.gender %></td>
      <td><%=h @person.birth_info %></td>
      <td><%=h @person.native_language %></td>
      <td><%= link_to 'Edit', :action => :edit, :id => @person.id %></td>
    </tr>
  </tbody>
</table>
<br/>
<div>
  <%= link_to 'Link to Family', :action => :find_families_for, :id => @person.id %>
</div>
