<% @title = 'Create New School Class' %>

<div class="account-form">
  <%= error_messages_for :school_class %>

  <% form_for :school_class do |form| %>
    <fieldset>
      <legend>Create New School Class</legend>
      <span class="school-class-edit">
        <%= render :partial => 'school_class_form', :object => form, :locals => {:current_grade_id => @school_class.grade_id} %>
        <span style="color:red">*&nbsp;</span>Required Field
        <div>
          <%= submit_tag 'Create', :class => 'submit' %>
        </div>
      </span>
    </fieldset>
  <% end %>
</div>
